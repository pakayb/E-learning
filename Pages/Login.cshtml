@page
@model ELearningV2.Pages.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div>
    <h1>Login</h1>
    <form method="post" asp-page="Login">
        <div asp-validation-summary="All"></div>
        <input asp-for="UserName" placeholder="Username" />
        <input asp-for="Password" placeholder="Password" />
        <input asp-for="RememberMe" />
        <input type="submit" value="Login" asp-page-handler="Login" />
    </form>
</div>