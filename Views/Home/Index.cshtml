@using ELearningV2.ViewModel
@using Microsoft.AspNetCore.Identity
@using ELearningV2.Models
@inject SignInManager<User> signInManager;
@model IndexViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<html>
<body>
    @if (signInManager.IsSignedIn(User))
    {
        <div>
            <h1>Choose a module!</h1>
            <ul>
                @foreach (var module in Model.Modules)
                {
                    <li><a asp-action="Index" asp-controller="Modules" asp-route-id="@module.Id"><strong>@module.Title</strong>.</a></li>
                }
            </ul>
        </div>
    }
    else
    {
        <div>
            <h1>Welcome to E-Learning!</h1>
            <p>This website is created for those who wants to learn programing.</p>
            <p>Our course will theach about the following topics:</p>
            <ul>
                <li><strong>Programing basics</strong>.</li>
                <li><strong>Web technologies</strong>. </li>
                <li><strong>Objectum oriented programing (OOP)</strong>.</li>
                <li><strong>Advanced programing</strong>.</li>
            </ul>
        </div>
    }
</body>
</html> 