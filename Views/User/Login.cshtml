@using ELearningV2.ViewModel
@model LoginViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<div class="card align-items-center">
    <h2>Login</h2>
    <div class="card-body">
        <form method="post">
            <div class="alert-danger" asp-validation-summary="All"></div>
            <input asp-for="UserName" placeholder="Username" />
            <input asp-for="Password" placeholder="Password" />
            <input type="submit" value="Login" />
        </form>
    </div>
    <h3>Need an account ?</h3>
    <a class="nav-link" asp-action="Register" asp-controller="Users">
        Register
    </a>
</div>