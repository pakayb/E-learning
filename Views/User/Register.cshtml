@using ELearningV2.ViewModel;
@model RegisterViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Sign up</h1>

<div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <input asp-for="User.FirstName" placeholder="Firstname" />
        <input asp-for="User.LastName" placeholder="Lastname" />
        <input asp-for="User.UserName" placeholder="Username" />
        <input asp-for="User.Email" placeholder="Email" />
        <input asp-for="Password" placeholder="Password" />
        <input type="submit" />
    </form>
</div> 